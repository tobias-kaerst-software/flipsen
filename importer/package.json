{
  "name": "importer",
  "workspaces": [
    "application",
    "modules/*"
  ],
  "scripts": {
    "frontend": "bun --filter 'frontend'",
    "deps": "bunx npm-check-updates --workspaces --root -u",
    "docker:up": "docker compose -p flipsen_importer -f docker/mongo.docker-compose.yml up -d --force-recreate",
    "docker:down": "docker compose -p flipsen_importer -f docker/mongo.docker-compose.yml down"
  }
}
